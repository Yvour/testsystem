%h1 Listing courses

%table
  %thead
    %tr
      %th Discipline
      %th Teacher
      %th Coursename
      %th
      %th
      %th
      
  %tbody
    - @courses.each do |course|
      %tr
        %td= course.discipline.name
        %td= course.teacher.to_label
        %td= course.coursename
        %td= link_to 'Show', course
        %td= link_to 'Edit', edit_course_path(course)
        %td= link_to 'Destroy', course, :method => :delete, :data => { :confirm => 'Are you sure?' }
  

%br

